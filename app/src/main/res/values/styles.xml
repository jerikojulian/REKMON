<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ActionbarLogo">
        <!--<item name="android:logo">@drawable/blong</item>-->
        <item name="android:displayOptions">useLogo</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="android:scaleX">.5</item>
        <item name="android:scaleY">.5</item>
        <item name="android:transformPivotY">0dip</item>
        <item name="android:transformPivotX">0dip</item>

    </style>
    <style name="AppTheme.LogoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionbarLogo</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ThemeHomeAdmin">
        <item name="colorPrimary">#FE85A6</item>
        <item name="colorPrimaryDark">#FE85A6</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
