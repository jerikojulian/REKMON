<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/AppTheme.ThemeHomeAdmin"
    tools:context="com.example.jerikohosea.rekmon.Activities.HomeAdmin">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#395373"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="Halaman Utama Admin"
                android:textColor="@color/white" />




        </RelativeLayout>

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:id="@+id/linearList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#F3BB71"
        android:clickable="true"
        android:orientation="horizontal"
        android:onClick="menuListData">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/menulist" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/alef_bold"
            android:gravity="center"
            android:text="LIST DATA&#x0A;ALTERNATIF"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/menunext" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearAdd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6AB5B1"
        android:layout_weight="1"
        android:clickable="true"
        android:orientation="horizontal"
        android:onClick="menuAddData">
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/menuadd" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/alef_bold"
            android:gravity="center"
            android:text="ADD DATA&#x0A;ALTERNATIF"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/menunext" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearAbout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B2DC76"
        android:layout_weight="1"
        android:clickable="true"
        android:orientation="horizontal"
        android:onClick="menuAbout">
        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/menuabout" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/alef_bold"
            android:gravity="center"
            android:lines="2"
            android:text="TENTANG&#x0A; PENULIS"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/menunext" />
    </LinearLayout>
</LinearLayout>
